	<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id = "@+id/mainactivity"
    android:tag="small_screen" >
    
    <!-- <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="222dp"
        android:layout_height="220dp"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
        android:src="@drawable/logo"
        android:visibility="visible"
        /> -->
     <ImageView
        android:id="@+id/ivLogo1"
        android:layout_width="222dp"
        android:layout_height="220dp"
		android:layout_centerHorizontal="true"
		android:src="@drawable/swat_logo"
		android:layout_marginTop="38dp"
        android:visibility="visible"
        
        />
    
    <RelativeLayout
        android:id="@+id/groupElements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:visibility="visible" >

	<TextView
	    android:id="@+id/tvCreateAccount"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/tvForgotPassword"
	    android:layout_alignParentRight="true"
	    android:text="Create an account"
	    android:textSize="16sp"
	    android:layout_marginRight="10dp"
	    android:textColor="#ffffff" />
	
	<Button
	    android:id="@+id/bLogin"
	    android:layout_width="wrap_content"
	    android:layout_height="38dp"
	    android:layout_above="@id/tvForgotPassword"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="10dp"
	    android:background="#D44326"
	    android:text="Login"
	    android:textColor="#000000" />
	
	<EditText
        android:id="@+id/etPass"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_above="@id/bLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:drawableStart="@drawable/login_lock_icn"
        android:padding="5dp"
        android:drawablePadding="5dp"
        android:hint="Password"
        android:textColorHint="#c7c7cd"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:password="true" >
    </EditText>
	
	<EditText
        android:id="@+id/etUName"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/etPass"
        android:background="#ffffff"
        android:ems="10" 
        android:drawableLeft="@drawable/login_uname_icn"
        android:padding="5dp"
        android:drawablePadding="5dp"
        android:hint="Username"
        android:textColorHint="#c7c7cd"
        android:textColor="#000000"
        android:layout_marginBottom="10dp" >
    </EditText>

	<TextView
	    android:id="@+id/tvForgotPassword"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="38dp"
	    android:layout_toLeftOf="@+id/tvCreateAccount"
	    android:text=""
	    android:textColor="#003d6c"
	    android:textSize="16sp" />
	
	</RelativeLayout>

</RelativeLayout>